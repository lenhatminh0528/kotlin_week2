<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@drawable/login_signup"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/bg_back_button"
            android:layout_marginTop="37dp"
            android:layout_marginLeft="27dp"
            android:paddingHorizontal="13dp"
            android:paddingVertical="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/icon_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="178dp"
            android:layout_marginHorizontal="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
            android:text="Verifcation Code"
            android:textSize="36dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Please type the verification code sent to prelookstudio@gmail.com"
                android:textSize="14dp"
                android:textColor="#9796A1" />
            <LinearLayout
                android:layout_marginTop="37dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/veri1"
                    android:background="@drawable/bg_input"
                    android:textSize="27dp"
                    android:padding="15dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOrange"
                    android:gravity="center"
                    android:maxLength="1"
                    android:layout_width="30dp"
                    android:layout_height="70dp"
                    android:inputType="numberDecimal"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/veri2"
                    android:background="@drawable/bg_input"
                    android:textSize="27dp"
                    android:padding="15dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOrange"
                    android:gravity="center"
                    android:maxLength="1"
                    android:layout_width="30dp"
                    android:layout_height="70dp"
                    android:inputType="numberDecimal"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/veri3"
                    android:padding="15dp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_input"
                    android:textColor="@color/colorOrange"
                    android:gravity="center"
                    android:maxLength="1"
                    android:layout_width="30dp"
                    android:layout_height="70dp"
                    android:textSize="27dp"
                    android:inputType="numberDecimal"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/veri4"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_input"
                    android:textSize="27dp"
                    android:textColor="@color/colorOrange"
                    android:gravity="center"
                    android:maxLength="1"
                    android:padding="15dp"
                    android:layout_width="30dp"
                    android:layout_height="70dp"
                    android:inputType="numberDecimal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="I donâ€™t recevie a code! "
                    android:textSize="16dp"
                    android:textColor="#5B5B5E"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:text=" Please resend "
                    android:textSize="16dp"
                    android:textColor="#FE724C"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>

</LinearLayout>